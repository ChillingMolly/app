<OgaldukScreen>:
    name: "ogalduk"

    BoxLayout:
        orientation: "vertical"
        padding: "10dp"
        spacing: "10dp"

        MDTopAppBar:
            title: "Monti Ogalduk"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.change_screen("map")]]

        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                padding: "10dp"
                spacing: "10dp"
                size_hint_y: None 
                height: self.minimum_height 
                pos_hint: {"center_y": 0.5}

                MDCard:
                    size_hint: None, None
                    size: "350dp", "280dp"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    elevation: 6
                    radius: [15, 15, 15, 15]
                    md_bg_color: 0.1, 0.1, 0.1, 1
                    adaptive_height: True

                    MDBoxLayout:
                        orientation: "vertical"
                        padding: "15dp"
                        spacing: "10dp"
                        adaptive_height: True

                        MDLabel:
                            text: "La Casa del Fuoco"
                            font_name: 'fonts/Belwe Bold.otf'
                            theme_text_color: "Custom"
                            text_color: 1, 0.75, 0, 1  # Colore dorato
                            font_style: "H5"
                            halign: "center"
                            adaptive_height: True

                        MDSeparator:
                    
                        MDLabel:
                            text: "• Descrizione"
                            font_name: 'fonts/Belwe Bold.otf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True

                            
                        MDLabel:
                            text: "I Monti Ogalduk nascondono al loro interno anni ed anni di storia. A partire dai minatori di Carlyle, fino all'enorme drago antico che li abitava e che ha dato inizio alla Battaglia di Fost. Adesso, i selvaggi Monti Ogalduk ospitano i più disparati clan. Tra essi, gli unici ricordati alla storia sono i Drachedandion. Rimangono ancora un territorio interamente da esplorare."
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True

                        MDSeparator:

                        MDLabel:
                            text: "• Luoghi di interesse"
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_name: 'fonts/Belwe Bold.otf'
                            font_style: "Body1"
                            adaptive_height: True

                        MDLabel:
                            text: "CLAN NYXARA: Ancora non esplorato... Casa di Inferion."
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True

                        MDLabel:
                            text: "CLAN BOLTSCALE: Il clan di Draxel, che fa capo a Morak. Quest'ultimo viene ricordato per l'enorme sacrificio fatto durante la Battaglia di Fost per proteggere il suo clan."
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True
                        
                        MDLabel:
                            text: "Ancora non esplorato..."
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True

                        MDSeparator:

                        MDLabel:
                            text: "• Personaggi collegati"
                            font_name: 'fonts/Belwe Bold.otf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True
                            
                        MDLabel:
                            text: "Draxel"
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True

                        MDLabel:
                            text: "Draxel"
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True

                        MDLabel:
                            text: "Morak"
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True

                        MDLabel:
                            text: "Bhor"
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True
                        
                        MDLabel:
                            text: "Ghor"
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True
                        
                        
                        
            


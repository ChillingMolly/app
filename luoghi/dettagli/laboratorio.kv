<LaboratorioScreen>:
    name: "laboratorio"

    BoxLayout:
        orientation: "vertical"
        padding: "10dp"
        spacing: "10dp"

        MDTopAppBar:
            title: "Laboratorio di Alzareth"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.change_screen("map")]]

        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                padding: "10dp"
                spacing: "10dp"
                size_hint_y: None 
                height: self.minimum_height 
                pos_hint: {"center_y": 0.5}

                MDCard:
                    size_hint: None, None
                    size: "350dp", "280dp"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    elevation: 6
                    radius: [15, 15, 15, 15]
                    md_bg_color: 0.1, 0.1, 0.1, 1
                    adaptive_height: True

                    MDBoxLayout:
                        orientation: "vertical"
                        padding: "15dp"
                        spacing: "10dp"
                        adaptive_height: True

                        MDLabel:
                            text: "La Casa dell'Angelo"
                            font_name: 'fonts/Belwe Bold.otf'
                            theme_text_color: "Custom"
                            text_color: 1, 0.75, 0, 1  # Colore dorato
                            font_style: "H5"
                            halign: "center"
                            adaptive_height: True

                        MDSeparator:
                    
                        MDLabel:
                            text: "• Descrizione"
                            font_name: 'fonts/Belwe Bold.otf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True

                            
                        MDLabel:
                            text: "Il laboratorio è stato costruito per la prima volta da Alzareth, poi restaurato e modificato con l'ausilio di Balin Torfard. Ora, in questa costruzione fatta di obsidarcanite (materiale magico molto raro), Alzareth ed il suo personale lavora a ogni tipo di esperimento: creature geneticamente modificate, animali intelligenti e a quanto pare anche angeli... Il laboratorio nasconde un piano interamente segreto. Cosa cela di così nascosto e pericoloso?"
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True

                        MDSeparator:

                        MDLabel:
                            text: "• Luoghi di interesse"
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_name: 'fonts/Belwe Bold.otf'
                            font_style: "Body1"
                            adaptive_height: True

                        MDLabel:
                            text: "ARCHIVIO ARCANO: Un archivio contenente tutti i libri e saggi più importanti del Nuovo Continente."
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True

                        MDLabel:
                            text: "Ancora non esplorato..."
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True

                        MDSeparator:

                        MDLabel:
                            text: "• Personaggi collegati"
                            font_name: 'fonts/Belwe Bold.otf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True
                            
                        MDLabel:
                            text: "Master Alzareth"
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True

                        MDLabel:
                            text: "Dottoressa Mirella Faleh"
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True

                        MDLabel:
                            text: "Tharim Ghalrak"
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True

                        MDLabel:
                            text: "Dottor Sam Kallith"
                            font_name: 'fonts/Belwe Italic.ttf'
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            font_style: "Body1"
                            adaptive_height: True
                        



<MapScreen>:
    name: "map"

    BoxLayout:
        orientation: "vertical"
        padding: "10dp"
        spacing: "10dp"

        MDTopAppBar:
            title: "Luoghi"
            elevation: 4
            left_action_items: [["arrow-left", lambda x: app.change_screen("menu")]]

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                cols: 2
                size_hint_y: None
                height: self.minimum_height
                pos_hint: {"center_x": 0.5}  # Centra il layout orizzontalmente
                spacing: "10dp"
                padding: "10dp"

                MDCard:
                    size_hint: None, None
                    size: "150dp", "200dp"
                    elevation: 8
                    on_release: app.change_screen("fost")
                    BoxLayout:
                        orientation: 'vertical'
                        FitImage:
                            source: "assets/fost.png"
                            size_hint_y: 0.8
                        Label:
                            text: "Fost"
                            size_hint_y: 0.2
                            halign: 'center'
                            valign: 'middle'
                            bold: True

